{
  "name": "arrowfinds",
  "version": "1.0.0",
  "description": "Dropshipping products finder",
  "scripts": {
    "start:server": "webpack-dev-server -d --config ./webpack.config.dev.js --hot --inline --progress",
    "start": "npm-run-all --parallel start:server security-check lint:watch",
    "lint": "esw webpack.config.* src buildScripts --color",
    "lint:watch": "yarn run lint --watch",
    "security-check": "nsp check",
    "localtunnel": "lt --port 3000 --subdomain arrowfinds",
    "share": "npm-run-all --parallel start:server localtunnel",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "move-scripts": "cpx \"./deploy_files/*.*\" ./dist",
    "move-images": "mkdir ./dist/images && cpx \"./src/images/*.*\" ./dist/images && cpx \"./src/favicon.ico\" ./dist",
    "move-build-files": "npm-run-all --parallel move-scripts move-images",
    "prebuild": "npm-run-all clean-dist move-build-files lint",
    "build": "webpack -p --config ./webpack.config.prod.js --progress",
    "serve": "babel-node buildScripts/distServer.js",
    "deploy": "git subtree push --prefix dist heroku master"
  },
  "engines": {
    "node": "^8.9.3",
    "npm": "^5.6.0",
    "yarn": "^1.3.2"
  },
  "author": "Yonatan Kreiner",
  "license": "MIT",
  "dependencies": {
    "@uirouter/angularjs": "^1.0.15",
    "angular": "^1.6.9",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "helmet": "^3.12.0",
    "ngstorage": "^0.3.11"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.26.0",
    "cpx": "^1.5.0",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-watch": "^3.1.4",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.1.0",
    "localtunnel": "^1.8.3",
    "mini-css-extract-plugin": "^0.4.0",
    "npm-run-all": "^4.1.2",
    "nsp": "^3.2.1",
    "open": "^0.0.5",
    "optimize-css-assets-webpack-plugin": "^4.0.0",
    "rimraf": "^2.6.2",
    "script-ext-html-webpack-plugin": "^2.0.1",
    "style-loader": "^0.20.3",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "url-loader": "^1.0.1",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1"
  }
}
